<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlaceDetails">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/Price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:autofillHints="@string/price"
            android:background="@drawable/input_rounded_corners"
            android:drawableStart="@drawable/ic_baseline_money_24"
            android:drawablePadding="2dp"
            android:ems="10"
            android:hint="@string/price"
            android:inputType="number"
            android:padding="10dp" />


        <EditText
            android:id="@+id/placeDescri"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:autofillHints="location"
            android:background="@drawable/input_rounded_corners"
            android:drawableStart="@drawable/ic_baseline_add_location_24"
            android:drawablePadding="2dp"
            android:ems="10"
            android:hint="@string/location"
            android:inputType="text"
            android:padding="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/land_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="4dp"
            android:autofillHints="@string/phone_number"
            android:background="@drawable/input_rounded_corners"
            android:drawableStart="@drawable/ic_baseline_phone_android_24"
            android:drawablePadding="2dp"
            android:ems="10"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:padding="10dp"
            tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />


        <Button
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="32dp"
            android:textSize="20sp"
        android:layout_marginRight="4dp"
        android:autofillHints="Add image"
        android:background="@drawable/input_rounded_corners"
        android:drawableStart="@drawable/ic_baseline_image_24"
        android:drawablePadding="2dp"
        android:ems="10"
            android:textColor="@color/white"
        android:hint="@string/add_image"
        tools:ignore="TouchTargetSizeCheck,TouchTargetSizeCheck,TouchTargetSizeCheck" />
        
        <ImageView
            android:id="@+id/view"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="180dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/lnd_upload"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/input_rounded_corners"
            android:backgroundTint="@color/defaultColor"
            android:textSize="20sp"
            android:text="@string/upload"
            android:textAllCaps="false"
            android:textColor="@color/white" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>